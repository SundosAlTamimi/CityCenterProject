<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".Replacement">


    <TextView
        android:id="@+id/textView9"
        android:text="    Replacement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0"
        android:textStyle="bold"
        android:textSize="35dp"
        android:textColor="@color/colorblue_dark"
        android:drawableTint="@color/colorblue_dark"
        android:drawablePadding="3dp"
   />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_weight="2"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:padding="7dp">

            <TextView
                android:id="@+id/textview"
                android:text="From"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:textColor="@color/dark_blue_3"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="14sp"
                 />

            <Spinner
                android:id="@+id/fromspinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:entries="@array/fromSpinner"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textview2"
                android:text="to"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:textColor="@color/dark_blue_3"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="14sp"
                />

            <Spinner
                android:id="@+id/tospinner"
                android:entries="@array/toSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="2dp"
                android:gravity="center"
                android:inputType="text"
                android:padding="3dp"
                android:text="@string/ZoneCode"
                android:textColor="@color/dark_blue_3"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/zoneedt"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginRight="5dp"
                android:layout_height="25dp"
                android:background="@drawable/back_border_edit"
                android:textColor="@color/dark_blue_3"
                android:elevation="2dp"
                android:inputType="text"
                android:padding="3dp"
                android:gravity="center"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/scanZoneCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="2dp"
                android:gravity="center"
                android:inputType="text"
                android:onClick="ScanCode"
                android:padding="3dp"
                android:drawableEnd="@drawable/ic_scan_black_24dp"
                android:textColor="@color/dark_blue_3"
                android:textSize="14sp"
                android:drawableRight="@drawable/ic_scan_black_24dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:text="@string/itemCode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_height="25dp"
                android:padding="3dp"
                android:gravity="center"
                android:textColor="@color/dark_blue_3"
                android:textSize="14sp"  />

            <EditText
                android:id="@+id/itemcodeedt"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:background="@drawable/back_border_edit"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="3dp"
                android:inputType="text"
                android:textColor="@color/dark_blue_3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/scanItemCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_scan_black_24dp"
                android:drawableRight="@drawable/ic_scan_black_24dp"
                android:elevation="2dp"
                android:onClick="ScanCode"
                android:gravity="center"
                android:inputType="text"
                android:padding="3dp"
                android:textColor="@color/dark_blue_3"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:text="@string/qty"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_height="25dp"


                android:elevation="2dp"
                android:padding="3dp"
                android:gravity="center"
                android:textColor="@color/dark_blue_3"
                android:textSize="14sp"  />

            <EditText
                android:id="@+id/qtyedt"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:background="@drawable/back_border_edit"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="3dp"
                android:inputType="text"
                android:textColor="@color/dark_blue_3"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="2dp"
                android:gravity="center"
                android:inputType="text"
                android:visibility="invisible"
                android:padding="3dp"

                android:drawableEnd="@drawable/ic_scan_black_24dp"
                android:textColor="@color/dark_blue_3"
                android:textSize="14sp"
                android:drawableRight="@drawable/ic_scan_black_24dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_weight="8"
                app:backgroundTint="@color/colorblue_dark"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_add_black_24dp"
                tools:ignore="VectorDrawableCompat" />


        </LinearLayout>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="-.4"
            android:gravity="top"
            android:background="@drawable/back_border_dark"
            android:padding="3dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:gravity="left"
                android:textSize="15sp"
                android:text="  From"
                android:textColor="@color/white"
                 />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:gravity="left"
                android:text="To"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:gravity="left"
                android:text="Zone"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="2"

                android:text="Item code"
                android:gravity="left"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:gravity="left"
                android:text="Qty"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/remove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight=".4"
                android:gravity="right"
                />
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight=".6"
            android:layout_height="490dp">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:fillViewport="true">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/replacmentRec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_weight="0"
            android:background="@drawable/done_button"
            android:gravity="center"
            android:text="Save"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/cancel_button"
            android:elevation="15dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Cancel"
            android:textColor="@color/red"
            android:textAllCaps="false"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>