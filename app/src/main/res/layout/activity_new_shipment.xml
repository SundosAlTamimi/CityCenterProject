<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NewShipment"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layer7"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textColor="@color/colorblue_dark"
            android:drawableTint="@color/colorblue_dark"
            android:drawablePadding="3dp"
            android:text="    New Shipment" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:elevation="2dp"

            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp"
                    android:padding="3dp"
                    android:text="@string/pono"

                     />

                <EditText
                    android:id="@+id/poNotxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2.7"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1"

                    android:padding="3dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ponoSearch"

                    android:drawableEnd="@drawable/ic_baseline_search_24"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:gravity="top"
                    tools:layout_editor_absoluteX="300dp"
                    tools:layout_editor_absoluteY="70dp">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView3"
                    android:text="@string/boxnum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp"

                    android:padding="3dp"
                   />

                <EditText
                    android:id="@+id/boxNotxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2.7"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="3dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/boxnoSearch"
                    android:drawableEnd="@drawable/ic_baseline_search_24"
                    android:layout_height="wrap_content"
                    android:layout_width="60dp"
                    android:gravity="top"
                    tools:layout_editor_absoluteX="300dp"
                    tools:layout_editor_absoluteY="70dp">

                </TextView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView4"
                    android:text="@string/barcode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/barCodetxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2.7"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="3dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/barcodescan"

                    android:layout_height="20dp"
                    android:layout_width="60dp"

                    android:drawableEnd="@drawable/ic_scan_black_24dp"
                    android:drawableRight="@drawable/ic_scan_black_24dp"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:onClick="ScanCode"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/dark_blue_3"
                    android:padding="3dp"
                    android:textSize="14sp"
                    android:text="@string/recQty"
                   />

                <EditText
                    android:id="@+id/RecQtytxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2.7"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="3dp"
                    android:textSize="14sp"

                    android:inputType="number"
                    android:text="1"
                     />

                <TextView


                    android:id="@+id/respon"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:gravity="top"
                    android:visibility="invisible"
                    tools:layout_editor_absoluteX="300dp"
                    tools:layout_editor_absoluteY="70dp">

                </TextView>
                <TextView


                    android:id="@+id/boxnorespon"
                    android:gravity="top"
                    android:visibility="invisible"
                    tools:layout_editor_absoluteX="300dp"
                    tools:layout_editor_absoluteY="70dp"
                    android:layout_height="0dp"
                    android:layout_width="0dp">

                </TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="horizontal">


                <TextView

                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1.22"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/Itemname"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/Itemnametxt"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="3"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="number"

                    android:padding="3dp"
                    android:enabled="false"
                    android:maxLines="1"
                    android:textSize="14sp" />
                <TextView

                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1.22"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/Poqty"
                    android:textColor="@color/dark_blue_3"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/PoQtytxt"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="3"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:enabled="false"
                    android:padding="3dp"
                    android:maxLines="1"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_border_dark"
                android:gravity="bottom"
                android:padding="3dp">

                <TextView
                    android:text="@string/pono"
                    android:textColor="@color/white"

                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"

                    android:textSize="15sp" />

                <TextView

                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/boxnum"
                    android:textColor="@color/white"
                     />

                <TextView

                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/barcode"
                    android:textColor="@color/white"
                   />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"

                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="@string/recQty"
                    android:textColor="@color/white"
                  />
                <TextView
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="@string/Differ"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/remove"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight=".4"

                    android:gravity="right"
                    />

            </TableRow>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/total_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="2dp"
            android:gravity="center"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/shipRec"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"

        android:gravity="bottom"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:elevation="3dp"
                android:gravity="center"
                android:textAllCaps="false"
                />

            <Button

                android:id="@+id/nextbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight=".5"
                android:background="@drawable/back_border_edit"

                android:elevation="3dp"
                android:gravity="center"
                android:text="@string/nextBox"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue_3" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:elevation="3dp"
                android:gravity="center"
                android:textAllCaps="false"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center|top"
            android:gravity="bottom|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/cancel_button"
                android:text="@string/cancel"

                android:textAllCaps="false"
                android:textColor="@color/red" />

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/done_button"
                android:text="@string/finish"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue_3" />
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
</RelativeLayout>