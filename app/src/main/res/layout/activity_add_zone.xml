<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale">
<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/layer7"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linearmain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"

                android:elevation="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:inputType="text"
                        android:padding="3dp"
                        android:text="@string/ZoneCode"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editZoneCode"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_marginRight="5dp"
                        android:layout_height="25dp"
                        android:background="@drawable/back_border_edit"

                        android:elevation="2dp"
                        android:padding="3dp"
                        android:gravity="center"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp"

                        />
                    <TextView
                        android:id="@+id/scanZoneCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:inputType="text"
                        android:padding="3dp"
                        android:onClick="ScanCode"

                        android:drawableEnd="@drawable/ic_scan_black_24dp"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp"
                        android:drawableRight="@drawable/ic_scan_black_24dp" />
                    <TextView
                        android:id="@+id/zoneSearch"

                        android:onClick="showZoneDialog"
                        android:drawableEnd="@drawable/ic_baseline_search_24"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="top">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_height="25dp"

                        android:text="@string/ZoneName"

                        android:padding="3dp"
                        android:gravity="center"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp"  />

                    <TextView
                        android:id="@+id/zoneName"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_marginRight="5dp"
                        android:layout_height="25dp"
                        android:background="@drawable/back_without_border"

                        android:elevation="2dp"
                        android:padding="3dp"
                        android:gravity="center"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp"  />
                    <TextView
                        android:id="@+id/sc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:inputType="text"
                        android:padding="3dp"
                        android:onClick="ScanCode"
                        android:visibility="invisible"

                        android:drawableEnd="@drawable/ic_scan_black_24dp"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp"
                        android:drawableRight="@drawable/ic_scan_black_24dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_height="25dp"

                        android:text="@string/itemCode"

                        android:padding="3dp"
                        android:gravity="center"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp"  />

                    <EditText
                        android:id="@+id/editItemCode"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_marginRight="5dp"
                        android:layout_height="25dp"
                        android:background="@drawable/back_border_edit"

                        android:elevation="2dp"
                        android:padding="3dp"
                        android:gravity="center"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp"  />
                    <TextView
                        android:id="@+id/scanItemCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:inputType="text"
                        android:padding="3dp"
                        android:onClick="ScanCode"
                        android:drawableEnd="@drawable/ic_scan_black_24dp"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp"
                        android:drawableRight="@drawable/ic_scan_black_24dp" />
                    <TextView
                        android:id="@+id/zon"
                        android:onClick="showZoneDialog"
                        android:visibility="invisible"
                        android:drawableEnd="@drawable/ic_baseline_search_24"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="top"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_height="25dp"

                        android:text="@string/Itemname"

                        android:padding="3dp"
                        android:gravity="center"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp"  />

                    <TextView
                        android:id="@+id/itemName"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_marginRight="5dp"
                        android:layout_height="25dp"
                        android:background="@drawable/back_without_border"

                        android:elevation="2dp"
                        android:padding="3dp"
                        android:gravity="center"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp"  />
                    <TextView
                        android:id="@+id/scanItemCode222"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:inputType="text"
                        android:padding="3dp"
                        android:visibility="invisible"

                        android:drawableEnd="@drawable/ic_scan_black_24dp"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp"
                        android:drawableRight="@drawable/ic_scan_black_24dp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_height="25dp"
                        android:text="@string/Qty"

                        android:elevation="2dp"
                        android:padding="3dp"
                        android:gravity="center"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp"  />

                    <EditText
                        android:id="@+id/editQty"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_marginRight="5dp"
                        android:layout_height="25dp"
                        android:background="@drawable/back_border_edit"
                        android:elevation="2dp"
                        android:maxLines="1"
                        android:inputType="number"
                        android:padding="3dp"
                        android:gravity="center"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp"  />
                    <EditText
                        android:id="@+id/itemKintText"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:visibility="gone"
                        android:layout_height="1dp" />
                    <EditText
                        android:id="@+id/exportStateText"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:visibility="gone"
                        android:layout_height="1dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:inputType="text"
                        android:visibility="invisible"
                        android:padding="3dp"

                        android:drawableEnd="@drawable/ic_scan_black_24dp"
                        android:textColor="@color/dark_blue_3"
                        android:textSize="14sp"
                        android:drawableRight="@drawable/ic_scan_black_24dp" />


                </LinearLayout>










            </LinearLayout>
            <LinearLayout
                android:id="@+id/total_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="center"

                android:elevation="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="3dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_border_dark"
                    android:padding="3dp">
                    <TextView
                        android:text="@string/ZoneCode"

                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"

                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:text="@string/itemCode"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_width="0dp"
                        android:layout_margin="2dp"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        />

                    <TextView
                        android:text="@string/Qty"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_width="0dp"
                        android:layout_margin="2dp"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/remove"
                        android:textColor="@color/white_dark"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="15sp"


                        />

                </TableRow>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycleZone"
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:background="@drawable/background_container"
                            android:layout_height="match_parent" >

                        </androidx.recyclerview.widget.RecyclerView>
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_gravity="center">


                <Button
                    android:id="@+id/save"
                    android:layout_height="35dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/save"
                    android:layout_margin="10dp"

                    android:onClick="saveData"
                    android:elevation="5dp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginBottom="3dp"
                    android:textSize="16sp"
                    android:textColor="@color/dark_blue_3"
                    android:background="@drawable/done_button"
                    />
                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_height="35dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:elevation="5dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="3dp"
                    android:padding="3dp"
                    android:onClick="exitAddZone"
                    android:layout_marginRight="55dp"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    android:background="@drawable/cancel_button"

                    />
            </LinearLayout>


        </LinearLayout>


<!--    </ScrollView>-->

</RelativeLayout>
